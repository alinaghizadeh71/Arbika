<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/linearmain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:layout_margin="2dp"
    card_view:cardCornerRadius="8dp"
    android:layout_alignParentTop="true"
   >
   <!--
     card_view:cardCornerRadius="8dp"
     card_view:cardUseCompatPadding="true"
     -->
   <!---->
   <!-- <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:riv_corner_radius_bottom_left="10dp"
            app:riv_corner_radius_bottom_right="10dp"
            app:riv_corner_radius_top_left="10dp"
            app:riv_corner_radius_top_right="10dp"

            android:id="@+id/cardmain"
            android:layout_gravity="top"

            android:layout_alignParentTop="true"
            >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
           android:id="@+id/framee">
         <!--   app:header_ribbonRadius="6"-->

                <android.support.v7.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/notif"
                    android:layout_gravity="left"
                    android:layoutDirection="ltr"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@color/accent"
                    card_view:cardCornerRadius="10dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/accent"
                    android:scaleType="fitXY"
                   >

                    <TextView
                        android:id="@+id/txtnum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textColor="@color/material_drawer_background"
                        android:background="@color/accent"
                        android:textSize="12sp"
                        android:layout_gravity="center|center_vertical"
                        android:gravity="center|center_vertical"/>
                    </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/country_photo"
            android:layout_width="match_parent"
            android:minWidth="10000dp"
            android:layout_height="120dp"
            android:contentDescription="@string/app_name"
android:src="@drawable/not"
            android:scaleType="centerCrop"
            />




        <LinearLayout
android:layout_below="@+id/country_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"

            android:orientation="vertical"
            android:background="@drawable/backgroudtext"
            android:layout_marginBottom="1dp"
            >
           <!-- android:background="@android:drawable/screen_background_dark_transparent"-->
            <TextView
                android:id="@+id/country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold"
                />
        </LinearLayout>
       <!-- <TextView
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:layout_below="@+id/country_photo"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:background="#1976D2"/>-->

    </FrameLayout>
</android.support.v7.widget.CardView>
</LinearLayout>